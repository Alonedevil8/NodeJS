extends layout/app

block styles 
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
  div(class="py-5")
    h1(class="text-center text-4xl font-extrabold") Ubicacion en el Mapa

    div(class="flex flex-col md:flex-row items-center py-10 gap-4")
      h2(class="text-sm uppercase text-gray-800 font-bold") Filtrado Propiedades:

      div(class="w-full md:w-auto flex-center gap-2")
        label(for="categorias" class="text-sm uppercase text-gray-500 font-bold") Categorias
        select(id="categorias" class=" flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
          option(value="") - Seleccione -
          each categoria in categorias
            option(value=categorias.id)= categoria.nombre

      div(class="w-full md:w-auto flex-center gap-2")
        label(for="precios" class="text-sm uppercase text-gray-500 font-bold") Precios
        select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
          option(value="") - Seleccione -
          each precio in precios
            option(value=precios.id)= precio.nombre      

  <p>
    div(id="mapa-inicio" class="h-[400px]")

    section(class="py-5")
      h2(class="text-center text-4xl font-extrabold pt-10") Casas en Venta

      div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-5")
        each propiedad in apartamentos
          include ./templates/card


block scripts
  script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
  script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
  script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")

  script(src="/js/mapaInicio.js")



      