div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen casa de ${propiedad.titulo}`)

    div(class="p-5 space-y-1 text-center")
        h3(class="text-2xl font-bold")= propiedad.titulo
        p(class="text-sm text-gray-600") Habitaciones: 
            span(class="text-gray-800 font-bold text-xs")= propiedad.habitaciones

        p(class="text-sm text-gray-600") WC: 
            span(class="text-gray-800 font-bold text-xs")= propiedad.wc

        p(class="text-sm text-gray-600") Precio: 
            span(class="text-gray-800 font-bold text-xs")= propiedad.precio.nombre

        a(class="blocktext-center text-xs" href=`/propiedad/${propiedad.id}`) Ver
    a(class="text-gray-400 block text-center ") ------------